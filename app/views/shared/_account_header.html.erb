<nav class="mo-account-header">
  <h1 class="uk-h1"><%= account.name %></h1>
  <div class="mo-solde-total">Solde : <%= formatValue(account.currentBanlance) %></div>
  <div class="mo-links">
    <ul>
      <li><%= link_to 'Télécharger CSV', account_path(account, :format => "csv"), class: "uk-button uk-button-text" %></li>
      <li><%= link_to 'Renommer', edit_account_path(account), class: "uk-button uk-button-text" %></li>
      <li><%= link_to 'Supprimer', account, method: :delete, class: "uk-button uk-button-text", data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </div>
  <div class="mo-settings">
    <div class="uk-inline">
        <span class="mo-label">Afficher les</span><button type="button" class="uk-button uk-button-small uk-button-default"><%= NUMBER_OF_ENTRIES_OPTIONS[@number_of_entries] %></button>
        <div uk-dropdown="mode: click ; pos: bottom-right">
          <ul class="uk-nav uk-dropdown-nav">
            <% NUMBER_OF_ENTRIES_OPTIONS.each do |key, choice| %>
              <li><%= link_to choice, admin_change_number_of_entries_url(key) %></li>
            <% end %>
          </ul>
        </div>
    </div>
  </div>
</nav>
