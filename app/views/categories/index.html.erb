<div class="mo-secondary">
  <h1 class="uk-h1">Catégories</h1>
  <%= link_to 'Ajouter une catégorie', new_category_path, class: "uk-button uk-button-primary" %>

  <table class="uk-table uk-table-small uk-table-striped uk-table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Nombre d'entrées rattachées</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><span class="uk-badge <%= "mo-badge-warning" if category.entries.count == 0 %>"><%= category.entries.count %></span></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: "uk-button uk-button-text" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, class: "uk-button uk-button-text", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
